<rapicorn-definitions xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- list construction -->
  <def:ListArea inherit="Rapicorn::Factory::ItemList"/>
  <def:ListAreaTable inherit="Table" />
  <def:ListRow inherit="Ambience" child-container="ListRowCavity" hexpand="1"
	       normal-background="background" lighting="none" shade="none">
    <Frame hexpand="1" frame-type="none" tight-focus="true">
      <HBox id="ListRowCavity"/>
    </Frame>
  </def:ListRow>

  <!-- list area -->
  <def:item-list inherit="Alignment" >
    <arg:model default=""/>
    <Table>
      <Alignment hexpand="1" vexpand="1" hposition="0" vposition="1"
		 left-padding="2" right-padding="2" bottom-padding="2" top-padding="2" >
	<Frame frame-type="in">
	  <ListArea model="`model`"/>
	</Frame>
      </Alignment>
      <VSlider vexpand="0" adjustment-source="ancestry-vertical" vposition="1" hposition="1" />
      <HSlider visible="0" hexpand="0" adjustment-source="ancestry-horizontal" vposition="0" />
    </Table>
  </def:item-list>

  <!-- main dialog -->
  <def:main-dialog inherit="Window">
    <Ambience normal-lighting="upper-left"> <!-- normal-background="beige" -->
      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<VBox spacing="5" >
	  <HBox spacing="5" homogeneous="1">
	    <Button><Label markup-text="Back"/></Button>
	    <Button><Label markup-text="Fwd"/></Button>
	    <Button><Label markup-text="Up"/></Button>
	  </HBox>

	  <VBox spacing="5" homogeneous="0" >
	    <item-list hspread="1" vspread="1" model="`ListModel`"/>
	    <Button hexpand="1" on-click="Wind0w::close()" > <Label markup-text="Quit"/> </Button>
	  </VBox>

	</VBox>
      </Alignment>
    </Ambience>
  </def:main-dialog>

</rapicorn-definitions>
