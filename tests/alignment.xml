<rapicorn-definitions xmlns:def="http://rapicorn.org/xmlns:def">

  <def:test-dialog inherit="Root">
    <VBox>

      <Label markup-text="Horizontal Alignment, Horizontal Scale,"/>
      <Label markup-text="Vertical Alignment, Vertical Scale:"/>

      <HBox>
	<Frame>
	  <TestBox snapshot_file="xtmp-alignment.png">
	    <HBox>

	      <VBox width="90">
		<Alignment hexpand="1"> <Arrow halign="0.0" hscale="0.0" width="30" height="30"/> </Alignment>
		<Alignment hexpand="1"> <Arrow halign="0.5" hscale="0.0" width="30" height="30"/> </Alignment>
		<Alignment hexpand="1"> <Arrow halign="1.0" hscale="0.0" width="30" height="30"/> </Alignment>
	      </VBox>

	      <VBox width="90">
		<Alignment hexpand="1"> <Arrow hscale="0.0" halign="0.5" width="30" height="30"/> </Alignment>
		<Alignment hexpand="1"> <Arrow hscale="0.5" halign="0.5" width="30" height="30"/> </Alignment>
		<Alignment hexpand="1"> <Arrow hscale="1.0" halign="0.5" width="30" height="30"/> </Alignment>
	      </VBox>

	      <HBox height="90">
		<Alignment vexpand="1"> <Arrow valign="0.0" vscale="0.0" width="30" height="30"/> </Alignment>
		<Alignment vexpand="1"> <Arrow valign="0.5" vscale="0.0" width="30" height="30"/> </Alignment>
		<Alignment vexpand="1"> <Arrow valign="1.0" vscale="0.0" width="30" height="30"/> </Alignment>
	      </HBox>

	      <HBox height="90">
		<Alignment vexpand="1"> <Arrow vscale="0.0" valign="0.5" width="30" height="30"/> </Alignment>
		<Alignment vexpand="1"> <Arrow vscale="0.5" valign="0.5" width="30" height="30"/> </Alignment>
		<Alignment vexpand="1"> <Arrow vscale="1.0" valign="0.5" width="30" height="30"/> </Alignment>
	      </HBox>

	    </HBox>
	  </TestBox>
	</Frame>
      </HBox>

    </VBox>
  </def:test-dialog>

</rapicorn-definitions>
