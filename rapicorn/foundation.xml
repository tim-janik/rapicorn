<rapicorn-gadgets xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- Alignment -->
  <def:Alignment inherit="Rapicorn::Factory::Alignment"/>

  <!-- Ambience (background + lighting) -->
  <def:Ambience inherit="Rapicorn::Factory::Ambience"/>

  <!-- Arrangement -->
  <def:Arrangement inherit="Rapicorn::Factory::Arrangement" />

  <!-- Arrow -->
  <def:Arrow inherit="Rapicorn::Factory::Arrow"/>

  <!-- buttons -->
  <def:Button inherit="Rapicorn::Factory::ButtonArea" child-container="child-area" >
    <arg:center-child default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<FocusFrame frame-type="none">
	  <Alignment id="child-area" vscale="$(not $center_child)" hscale="$(not $center_child)" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
	</FocusFrame>
      </Ambience>
    </Frame>
  </def:Button>
  <def:UnfocusedButton inherit="Rapicorn::Factory::ButtonArea" child-container="child-area" >
    <arg:center-child default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<Alignment id="child-area" vscale="$(not $center_child)" hscale="$(not $center_child)" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
      </Ambience>
    </Frame>
  </def:UnfocusedButton>
  <def:DefaultButton inherit="Rapicorn::Factory::Frame" child-container="child-area" frame-type="in" >
    <Alignment left-padding="2" right-padding="2" bottom-padding="2" top-padding="2" >
      <Button id="child-area" />
    </Alignment>
  </def:DefaultButton>

  <!-- DotGrid -->
  <def:DotGrid inherit="Rapicorn::Factory::DotGrid"/>

  <!-- Drawable -->
  <def:Drawable inherit="Rapicorn::Factory::Drawable"/>

  <!-- frames -->
  <def:Frame inherit="Rapicorn::Factory::Frame"/>
  <def:FocusFrame inherit="Rapicorn::Factory::FocusFrame"/>

  <!-- Image -->
  <def:Image inherit="Rapicorn::Factory::Image" />

  <!-- Label -->
  <def:Label inherit="Rapicorn::Factory::TextPango" />

  <!-- Root -->
  <def:Root inherit="Rapicorn::Factory::Root"/>

  <!-- slider -->
  <def:Rapicorn-slider-trough inherit="Rapicorn::Factory::SliderTrough"/>
  <def:Rapicorn-slider-skid inherit="Rapicorn::Factory::SliderSkid"/>
  <!-- HSlider -->
  <def:HSlider inherit="Rapicorn::Factory::SliderArea">
    <Frame normal-frame="in" vexpand="1" hexpand="1" height="18">
      <HBox vexpand="1">
	<UnfocusedButton on-click="decrement" on-click2="page-decrement" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="left" size-policy="width-from-height"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough hexpand="1" vexpand="1">
	  <Rapicorn-slider-skid vspread="1" hexpand="1" vertical-skid="0">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" vexpand="1">
		<DotGrid n-hdots="6" n-vdots="2" left-padding-dots="2" right-padding-dots="2" top-padding-dots="0" bottom-padding-dots="0" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="increment" on-click2="page-increment" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="right" size-policy="width-from-height"/>
	</UnfocusedButton>
      </HBox>
    </Frame>
  </def:HSlider>
  <!-- VSlider -->
  <def:VSlider inherit="Rapicorn::Factory::SliderArea">
    <Frame normal-frame="in" vexpand="1" hexpand="1" width="18">
      <VBox hexpand="1">
	<UnfocusedButton on-click="increment" on-click2="page-increment" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="up" size-policy="height-from-width"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough vexpand="1" hexpand="1">
	  <Rapicorn-slider-skid hspread="1" vexpand="1" vertical-skid="1">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" hexpand="1">
		<DotGrid n-hdots="2" n-vdots="6" left-padding-dots="0" right-padding-dots="0" top-padding-dots="2" bottom-padding-dots="2" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="decrement" on-click2="page-decrement" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="down" size-policy="height-from-width"/>
	</UnfocusedButton>
      </VBox>
    </Frame>
  </def:VSlider>

  <!-- Table -->
  <def:Table inherit="Rapicorn::Factory::Table" >
  </def:Table>
  <def:HBox inherit="Rapicorn::Factory::HBox" />
  <def:VBox inherit="Rapicorn::Factory::VBox" />

  <!-- TestItem -->
  <def:TestItem inherit="Rapicorn::Factory::TestItem"/>

  <!-- TextEditor -->
  <def:TextEditor inherit="Rapicorn::Factory::Text::Editor" />

</rapicorn-gadgets>
