  <!-- Markup test -->
  <tmpl:define id="ascii-art-label" inherit="Label">
    <tmpl:property id="markup-text">
      <pre><tt>
+----------------------------------------+
|         (__)                           |
|         (oo)   .oooO  / ) ( \  Oooo.   |
|   /------\/    (   ) / (   ) \ (   )   |
|  / |    ||      \ ( (   ) (   ) ) /    |
| *  /\---/\   ----\_).oooO-Oooo.(_/---- |
|    ~~   ~~                             |
+----------------------------------------+
	</tt></pre>
    </tmpl:property>
  </tmpl:define>

  <!-- Markup test -->
  <tmpl:define id="markup-test" inherit="Label">
    <tmpl:property id="markup-text">
      Text styles: <b>bold</b> <u>underline</u> <i>italic</i> <s>strike</s> <br/>
      Teletype + pre: <tt><pre>** *  *   * teletype + pre *   *  * **</pre></tt> <br/>
      Large: normal <larger>larger1 <larger>larger2 <larger>larger3 <larger>larger4 <larger>larger5 </larger></larger></larger></larger></larger> <br/>
      Small: normal <smaller>smaller1 <smaller>smaller2 <smaller>smaller3 <smaller>smaller4 <smaller>smaller5 </smaller></smaller></smaller></smaller></smaller> <br/>
      Nested tags: <b>bold<u>+underline<i>+italic<s>+strike</s></i></u></b> <br/>
      Nested tags &lt;tt&gt;: <tt><b>bold<u>+underline<i>+italic<s>+strike</s></i></u></b></tt> <br/>
      Font Families: <font family="serif">Serif-Text</font> <font family="sans">Sans-Text</font> <font family="mono">Mono-Text</font> <font family="arial">Arial-Text</font> <font family="times">Times-Text</font> <br/>
      Colors:
      foregrounds: <fg color='red'>red</fg> <fg color='green'>green</fg> <fg color='blue'>blue</fg>
      backgrounds: <fg color='white'> <bg color='red'>red</bg> <bg color='green'>green</bg> <bg color='blue'>blue</bg> </fg>
    </tmpl:property>
  </tmpl:define>

  <!-- text editor test -->
  <tmpl:define id="text-editor-test" inherit="Frame" frame-type="in">
    <FocusFrame frame-type="none">
      <TextEditor>
	<Label>
	  <tmpl:property id="markup-text">
	    editorg<pre>  </pre>qtext Umlauts: ÄÖÜäöüß
	  </tmpl:property>
	</Label>
      </TextEditor>
    </FocusFrame>
  </tmpl:define>

  <!-- wrap text test -->
  <tmpl:define id="wrap-text-test" inherit="Frame">
    <Label
      text-mode="wrapped"
      markup-text="Wrappable test text with multiple words so words and spaces are available to allow wrapping"
      />
    <!-- request-digits="3" request-chars="3" -->
  </tmpl:define>

  <!-- test dialog -->
  <tmpl:define id="main-shell" inherit="Window">
    <Ambience normal-lighting="upper-left"> <!-- normal-background="beige" -->
      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<VBox sensitive="1" spacing="5" hexpand="1">
	  <HBox>
	    <ascii-art-label/>
	    <scroll-area-test width="400" hspread="1"/>
	  </HBox>
	  <Alignment halign="0.5" hexpand="1">
	    <Frame frame-type="etched-out">
	      <markup-test/>
	    </Frame>
	  </Alignment>
	  <HBox>
	    <Label markup-text="Wrap Test:"/>
	    <wrap-text-test/>
	  </HBox>
	  <Frame frame-type="etched-in">
	    <Label markup-text="Insensitive Demo Text on a very long line with semantically insignifcant words." sensitive="0" />
	  </Frame>
	  <VBox>
	    <Label markup-text="Text Editor Test:"/>
	    <text-editor-test />
	  </VBox>
	  <Button hexpand="1" on-click="Window::close()" > <Label markup-text="Quit"/> </Button>
	</VBox>
      </Alignment>
    </Ambience>
  </tmpl:define>
