      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<VBox spacing="3" >
	  <VBox>
	    <Label markup-text="Drawable:" />
	    <Frame>
	      <Drawable id="drawable1" />
	    </Frame>
	  </VBox>
	  <Label markup-text="Funny Frames:" />
	  <frame-test/>
	  <Button hexpand="1" on-click="Wind0w::close()" > <Label markup-text="Quit"/> </Button>
	</VBox>
      </Alignment>
    </Ambience>
  </def:graphics-dialog>

