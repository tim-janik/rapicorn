<rapicorn-definitions xmlns:tmpl="http://rapicorn.org/xmlns:tmpl">

  <!-- Alignment -->
  <tmpl:define id="Alignment" inherit="Rapicorn::Factory::Alignment"/>

  <!-- Ambience (background + lighting) -->
  <tmpl:define id="Ambience" inherit="Rapicorn::Factory::Ambience"/>

  <!-- Arrangement -->
  <tmpl:define id="Arrangement" inherit="Rapicorn::Factory::Arrangement" />

  <!-- Arrow -->
  <tmpl:define id="Arrow" inherit="Rapicorn::Factory::Arrow"/>

  <!-- buttons -->
  <tmpl:define id="Button" inherit="Rapicorn::Factory::ButtonArea" child-container="child-area" >
    <tmpl:argument id="center-child" default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<FocusFrame frame-type="none">
	  <Alignment id="child-area" vscale="`not 1*center_child`" hscale="`not 1*center_child`" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
	</FocusFrame>
      </Ambience>
    </Frame>
  </tmpl:define>
  <tmpl:define id="UnfocusedButton" inherit="Rapicorn::Factory::ButtonArea" child-container="child-area" >
    <tmpl:argument id="center-child" default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<Alignment id="child-area" vscale="`not 1*center_child`" hscale="`not 1*center_child`" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
      </Ambience>
    </Frame>
  </tmpl:define>
  <tmpl:define id="DefaultButton" inherit="Rapicorn::Factory::Frame" child-container="child-area" frame-type="in" >
    <tmpl:argument id="on-click" />
    <Alignment left-padding="2" right-padding="2" bottom-padding="2" top-padding="2" >
      <Button id="child-area" on-click="`on_click`"/>
    </Alignment>
  </tmpl:define>

  <!-- ImageFrame -->
  <tmpl:define id="ImageFrame" inherit="Rapicorn::Factory::ImageFrame"/>

  <!-- DotGrid -->
  <tmpl:define id="DotGrid" inherit="Rapicorn::Factory::DotGrid"/>

  <!-- Drawable -->
  <tmpl:define id="Drawable" inherit="Rapicorn::Factory::Drawable"/>

  <!-- frames -->
  <tmpl:define id="Frame" inherit="Rapicorn::Factory::Frame"/>
  <tmpl:define id="FocusFrame" inherit="Rapicorn::Factory::FocusFrame"/>

  <!-- Image -->
  <tmpl:define id="Image" inherit="Rapicorn::Factory::Image" />

  <!-- Label -->
  <tmpl:define id="Label" inherit="Rapicorn::Factory::Label" />
  <tmpl:define id="Rapicorn_Factory_TextBlock" inherit="Rapicorn::Factory::TextPango" />

  <!-- Window -->
  <tmpl:define id="Window" inherit="Rapicorn::Factory::Window"/>

  <!-- slider -->
  <tmpl:define id="Rapicorn-slider-trough" inherit="Rapicorn::Factory::SliderTrough"/>
  <tmpl:define id="Rapicorn-slider-skid" inherit="Rapicorn::Factory::SliderSkid"/>
  <!-- HSlider -->
  <tmpl:define id="HSlider" inherit="Rapicorn::Factory::SliderArea">
    <Frame normal-frame="in" vexpand="1" hexpand="1" height="18">
      <HBox vexpand="1">
	<UnfocusedButton on-click="decrement" on-click2="page-decrement" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="left" size-policy="width-from-height"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough hexpand="1" vexpand="1">
	  <Rapicorn-slider-skid vspread="1" hexpand="1" vertical-skid="0">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" vexpand="1">
		<DotGrid n-hdots="6" n-vdots="2" left-padding-dots="2" right-padding-dots="2" top-padding-dots="0" bottom-padding-dots="0" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="increment" on-click2="page-increment" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="right" size-policy="width-from-height"/>
	</UnfocusedButton>
      </HBox>
    </Frame>
  </tmpl:define>
  <!-- VSlider -->
  <tmpl:define id="VSlider" inherit="Rapicorn::Factory::SliderArea">
    <Frame normal-frame="in" vexpand="1" hexpand="1" width="18">
      <VBox hexpand="1">
	<UnfocusedButton on-click="decrement" on-click2="page-increment" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="up" size-policy="height-from-width"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough vexpand="1" hexpand="1">
	  <Rapicorn-slider-skid hspread="1" vexpand="1" vertical-skid="1">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" hexpand="1">
		<DotGrid n-hdots="2" n-vdots="6" left-padding-dots="0" right-padding-dots="0" top-padding-dots="2" bottom-padding-dots="2" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="increment" on-click2="page-decrement" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="down" size-policy="height-from-width"/>
	</UnfocusedButton>
      </VBox>
    </Frame>
  </tmpl:define>

  <!-- ScrollArea -->
  <tmpl:define id="RapicornScrollPort" inherit="Rapicorn::Factory::ScrollPort"/>
  <tmpl:define id="RapicornScrollArea" inherit="Rapicorn::Factory::ScrollArea"/>
  <tmpl:define id="ScrollArea" inherit="Alignment" child-container="scroll-container">
    <RapicornScrollArea>
      <Table>
	<Alignment hexpand="1" vexpand="1" hposition="0" hspan="1" vposition="0" vspan="1" width="0" height="0"
	  left-padding="2" right-padding="3" bottom-padding="2" top-padding="2">
	  <Frame frame-type="in" hscale="0" vscale="0">
	    <RapicornScrollPort id="scroll-container">
	      <!-- <Ambience id="scroll-container" normal-lighting="upper-left"/> -->
	    </RapicornScrollPort>
	  </Frame>
	</Alignment>
	<VSlider vexpand="0" adjustment-source="ancestry-vertical"   vposition="0" hposition="1" />
	<HSlider hexpand="0" adjustment-source="ancestry-horizontal" vposition="1" />
      </Table>
    </RapicornScrollArea>
  </tmpl:define>

  <!-- Table -->
  <tmpl:define id="Table" inherit="Rapicorn::Factory::Table" >
  </tmpl:define>
  <tmpl:define id="HBox" inherit="Rapicorn::Factory::HBox" />
  <tmpl:define id="VBox" inherit="Rapicorn::Factory::VBox" />

  <!-- IdlTestWidget -->
  <tmpl:define id="IdlTestWidget" inherit="Rapicorn::Factory::IdlTestWidget"/>

  <!-- TestBox -->
  <tmpl:define id="TestBox" inherit="Rapicorn::Factory::TestBox"/>

  <!-- TestContainer -->
  <tmpl:define id="TestContainer" inherit="Rapicorn::Factory::TestContainer"/>

  <!-- TestWidget -->
  <tmpl:define id="TestWidget" inherit="TestContainer" paint-allocation="1" width="10" height="10"/>

  <!-- TextEditor -->
  <tmpl:define id="TextEditor" inherit="Rapicorn::Factory::TextEditor"/>

</rapicorn-definitions>
