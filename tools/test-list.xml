<rapicorn-definitions xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <def:ListArea inherit="Rapicorn::Factory::ItemList"/>
  <def:item-list inherit="Alignment" >
    <Table>
      <Alignment hexpand="1" vexpand="1" left-attach="0" right-attach="1" bottom-attach="1" top-attach="2"
		 left-padding="2" right-padding="2" bottom-padding="2" top-padding="2" >
	<Frame frame-type="in">
	  <ListArea/>
	</Frame>
      </Alignment>
      <VSlider vexpand="0" adjustment-source="ancestry-vertical"   bottom-attach="1" left-attach="1" />
      <HSlider visible="0" hexpand="0" adjustment-source="ancestry-horizontal" bottom-attach="0" />
    </Table>
  </def:item-list>

  <!-- test dialog -->
  <def:test-dialog inherit="Root" width="400" >
    <Ambience normal-lighting="upper-left"> <!-- normal-background="beige" -->
      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<VBox spacing="5" homogeneous="0" >
	  <item-list hspread="1" vspread="1"/>
	  <Button hexpand="1" on-click="Window::close()" > <Label markup-text="Quit"/> </Button>
	</VBox>
      </Alignment>
    </Ambience>
  </def:test-dialog>

</rapicorn-definitions>
